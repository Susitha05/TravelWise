<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.travelwise">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/travelwise_applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/travelwise_applogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelWise"
        tools:targetApi="31">
        <activity
            android:name=".views.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".views.BookingConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".views.SeatSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".views.SeatBookingActivity"
            android:exported="false" />
        <activity
            android:name=".views.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".views.MapsActivity"
            android:exported="true" />
        <activity
            android:name=".views.DashboardActivity"
            android:exported="true" />
        <activity
            android:name=".views.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".views.BookingHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".views.DriverAssignActivity"
            android:exported="true" />
        <activity
            android:name=".views.BusRegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".views.DriverViewActivity"
            android:exported="true" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>